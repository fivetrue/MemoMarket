<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alphaBlack">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_product_add"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:src="@drawable/ic_check_white_50dp"
        app:layout_anchor="@+id/layout_product_add"
        app:layout_anchorGravity="bottom|center_horizontal"
        app:backgroundTint="@color/colorPrimary"/>

    <ProgressBar
        android:id="@+id/pb_product_add_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/fab_product_add"
        app:layout_anchorGravity="center"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/layout_ad_product_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/layout_product_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:id="@+id/layout_product_add_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="45dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/tv_fragment_product_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/register_product"
                    android:textAllCaps="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_text_background"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ProgressBar
                        android:id="@+id/pb_product_add_retrieving"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/et_product_add_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="7"
                        android:background="@null"
                        android:hint="@string/hint_input_product_name"
                        android:singleLine="true"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/dimGray" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:text="*"
                        android:textColor="@color/darkRed"/>
                    <!--<android.support.design.widget.FloatingActionButton-->
                    <!--android:id="@+id/fab_product_scan"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight="1"-->
                    <!--android:layout_margin="3dp"-->
                    <!--android:src="@drawable/ic_scan_white_50dp"-->
                    <!--android:layout_gravity="center_vertical"-->
                    <!--app:fabSize="mini"-->
                    <!--app:backgroundTint="@color/darkBlue"/>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_text_background"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/et_product_add_price"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="7.5"
                        android:background="@null"
                        android:hint="@string/price"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/dimGray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_text_background"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/et_product_add_store"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="7.5"
                        android:background="@null"
                        android:hint="@string/store"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:textColor="@color/darkGray"
                        android:textColorHint="@color/dimGray" />
                </LinearLayout>

                <!--<TextView-->
                <!--android:id="@+id/tv_product_input_barcode"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:textSize="10dp"-->
                <!--android:textColor="@color/gray"/>-->
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
