<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alphaBlack">
    <android.support.v7.widget.CardView
        android:id="@+id/layout_product_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        app:cardBackgroundColor="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="30dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_fragment_product_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register_product"
                android:textColor="@color/colorPrimary"
                android:textAllCaps="true"
                android:layout_margin="10dp"
                android:textSize="20dp"/>

            <LinearLayout
                android:id="@+id/layout_product_add_input"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/tv_fragment_product_add"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@drawable/input_text_background">
                <ProgressBar
                    android:id="@+id/pb_product_add_retrieving"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:visibility="invisible"/>

                <EditText
                    android:id="@+id/et_product_add"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7.5"
                    android:layout_gravity="center_vertical"
                    android:hint="@string/hint_input_product_name"
                    android:textColor="@color/darkGray"
                    android:textColorHint="@color/dimGray"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:background="@null"/>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_product_scan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:src="@drawable/ic_scan_white_50dp"
                    android:layout_gravity="center_vertical"
                    app:fabSize="mini"
                    app:backgroundTint="@color/darkBlue"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_product_input_barcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="10dp"
                android:textColor="@color/gray"/>

            <ProgressBar
                android:id="@+id/pb_product_add_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fab_margin"
                android:layout_gravity="center"
                android:visibility="invisible"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_product_add"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:src="@drawable/ic_check_white_50dp"
        app:layout_anchor="@id/pb_product_add_done"
        app:layout_anchorGravity="center"
        app:backgroundTint="@color/colorPrimary"/>

</android.support.design.widget.CoordinatorLayout>
