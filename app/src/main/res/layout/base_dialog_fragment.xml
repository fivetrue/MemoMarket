<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/base_dialog_background">
    <TextView
        android:id="@+id/tv_base_dialog_fragment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/primaryBlue"/>

    <FrameLayout
        android:id="@+id/layout_base_dialog_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<android.support.design.widget.TextInputLayout-->
                    <!--android:id="@+id/layout_input_base_dialog_fragment"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:visibility="gone">-->

                    <!--<android.support.design.widget.TextInputEditText-->
                        <!--android:id="@+id/input_base_dialog_fragment"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:padding="@dimen/base_dialog_input_padding"-->
                        <!--android:maxLines="1"-->
                        <!--android:imeOptions="actionDone"/>-->

                <!--</android.support.design.widget.TextInputLayout>-->

                <EditText
                    android:id="@+id/input_base_dialog_fragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/base_dialog_input_padding"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:visibility="gone"/>

                <CheckBox
                    android:id="@+id/cb_base_dialog_fragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10.7dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_base_dialog_fragment_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:alpha="0.9"
                    android:textSize="16dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_base_dialog_fragment_sub_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="12dp"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_base_dialog_fragment_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:text="@android:string/cancel"
            android:background="@drawable/common_button_ripple"/>

        <Button
            android:id="@+id/btn_base_dialog_fragment_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:text="@android:string/ok"
            android:background="@drawable/common_button_ripple"/>
    </LinearLayout>
</LinearLayout>