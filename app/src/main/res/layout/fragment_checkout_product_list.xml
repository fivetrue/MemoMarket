<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_fragment_checkout_product_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/sv_fragment_checkout_product_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_fragment_checkout_product_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/actionbar_height"
                android:layout_marginBottom="@dimen/fab_size"
                android:nestedScrollingEnabled="false" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fragment_checkout_product_list_buy"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:src="@drawable/ic_cart_buy_white_50dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_gravity="center|bottom"
        android:visibility="invisible"
        app:backgroundTint="@color/darkBlue"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fragment_checkout_product_list_return"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:src="@drawable/ic_cart_return_white_50dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_gravity="left|bottom"
        android:visibility="invisible"
        app:backgroundTint="@color/primaryRed"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_fragment_checkout_product_list_cancel"
        android:layout_width="@dimen/fab_size"
        android:layout_height="@dimen/fab_size"
        android:src="@drawable/ic_cancel_white_50dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:layout_gravity="right|bottom"
        android:visibility="invisible"
        app:backgroundTint="@color/lightRed"/>

    <TextView
        android:id="@+id/tv_fragment_checkout_product_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/purchases_no_item"/>
</android.support.design.widget.CoordinatorLayout>