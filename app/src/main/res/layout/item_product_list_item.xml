<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:id="@+id/layout_item_product_list_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/common_button_ripple">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_item_product_list_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tv_item_product_list_item_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_product_list_item_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_check_red_50dp"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>