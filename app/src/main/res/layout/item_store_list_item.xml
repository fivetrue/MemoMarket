<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="6dp">
        <RelativeLayout
            android:id="@+id/layout_item_store_list_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/common_rect_background_ripple">
            <ImageView
                android:id="@+id/iv_item_store_list_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:transitionName="@string/transition_image"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/alphaWhite">
                <TextView
                    android:id="@+id/tv_item_store_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="17dp"
                    android:maxLines="2"/>

                <TextView
                    android:id="@+id/tv_item_store_list_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray"
                    android:textSize="13dp"
                    android:maxLines="2"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>