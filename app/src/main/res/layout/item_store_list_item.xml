<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_store_list_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/dimGray">

    <LinearLayout
        android:id="@+id/layout_item_store_list_item"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/common_button_ripple">
        <ImageView
            android:id="@+id/iv_item_store_list_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_add_white_20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_item_store_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"/>
    </LinearLayout>
</RelativeLayout>